class Personagem {
    constructor(classe) {
        this.classe = classe;
    }

    realizarAtaque() {
        if (this.classe === "mago") {
            return "Usou magia";
        } else if (this.classe === "guerreiro") {
            return "Usou espada";
        } else if (this.classe === "monge") {
            return "Usou artes marciais";
        } else {
            return "Usou shuriken";
        }
    }
}

// Exemplo de uso
var mago = new Personagem("mago");
console.log(mago.realizarAtaque());

var guerreiro = new Personagem("guerreiro");
console.log(guerreiro.realizarAtaque());

var monge = new Personagem("monge");
console.log(monge.realizarAtaque());

var ninja = new Personagem("ninja");
console.log(ninja.realizarAtaque());

var personagemDesconhecido = new Personagem("arqueiro");
console.log(personagemDesconhecido.realizarAtaque());